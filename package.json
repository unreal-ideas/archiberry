{
  "name": "archiberry",
  "version": "1.0.0",
  "description": "",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "start": "tsc && node lib/index.js",
    "build": "rimraf lib/* && tsc -p .",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/node": "^13.1.8",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.0",
    "lint-staged": "^10.0.2",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
